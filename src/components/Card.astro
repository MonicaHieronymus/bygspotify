---
const {img, header, text} = Astro.props;
---

<div class="Card_bg">
    <div>
        <img class="albumCover" src={img}>
    <h1>{header}</h1>
    </div>

    <p>{text}</p>
<div>
   
   
   
<style>

.Card_bg {
background: hotpink;
max-width: 174px;
position: relative;
z-index:1;
border-radius:10px;
padding-top:10px;
color: white;
margin-right:40px;
}  

.Card_bg:hover {
background: black;
scale:1.01;
}

.Card_bg p {
    font-size: 14px;
    margin-left: 10px;
    margin-right: 4px;
}

.Card_bg h1 {
font-size: 20px; 
margin-left: 10px;
}

.albumCover {
    margin: auto;
    display: block;
    padding: 0 10px;
}

