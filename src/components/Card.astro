---
const {img, header, text, playBtn, spotifyLogo} = Astro.props;
---


<div class="wrap"> 
	<div class="Card_bg"> 
		<div>
			<img class="albumCover" src={img}>
				{spotifyLogo && <img class="spotifyLogo" src="/icons/logo-alt.svg" alt="spotify logo"/>}
				{playBtn && <img class="playBtn" src="/icons/play-icon.svg" alt="play ikon knap"/>}
		
			<h1> {header}</h1>
		</div>
		<p> {text} </p>
	</div>
</div>
   
   
<style>

.wrap:hover .playBtn{
		opacity: 80%;
	}

	
	.Card_bg{
		background: #202020; /*color #3C3C3C skal bruges til hover */
		max-width:180px;
		position:relative;
		z-index:1;
		border-radius:10px;
		padding-top:22px;
        padding-bottom: 20px;
        padding: 10px;
		color:#F0F0F0;
		border-radius: 5px;
	}
	.Card_bg:hover{
		background:#3C3C3C;
		scale:1.01;
	}

.Card_bg p {
    font-size: 12px;
    margin-left: 10px;
    margin-right: 4px;
	color: rgb(120, 120, 120);
}

.Card_bg h1 {
font-size: 16px; 
margin-left: 10px;
}
	.spotifyLogo{
		position:absolute;
		z-index:2;
		left:20px;
		top:20px;
		margin:4px;
		width:15px;
	}

	.albumCover{
		margin:auto;
		display:block;
        padding: 0 10px;
		padding-top: 10px;
		border-radius: 10px;
	}

	.albumCover_text{
		z-index:3;
		position:absolute;
		top:110px;
		font-size:24px;
	}
	.playBtn{
		position:absolute;
		z-index:4;
		border-radius:50px;
		padding:8px;
		top:110px;
		right:20px;
		opacity: 0;
		background-color: #00CC00;
		border:none;
		width:50px;
	}
	.playBtn:hover{
		opacity:80%;
        cursor: pointer;
	}
	

    </style>